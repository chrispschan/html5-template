<!-- scripts -->
{{#each @local.page.plugin as |files|}}
    {{~#ifCond files.type "===" "relative" ~}}
        <script type="text/javascript" src="{{@local.path.js}}{{{files.file}}}"></script>
    {{else}}
        <script type="text/javascript" src="{{{files.file}}}"></script>
    {{~/ifCond}}
{{~/each}}
{{#if path.babel ~}}
    <script type="text/javascript" src="{{@local.path.js}}{{@local.path.babel}}"></script>
{{~/if}}
{{#each @local.page.scripts as |files|}}
    {{~#ifCond files.type "===" "relative" ~}}
        <script type="text/javascript" src="{{@local.path.js}}{{{files.file}}}"></script>
    {{else}}
        <script type="text/javascript" src="{{{files.file}}}"></script>
    {{~/ifCond}}
{{~/each}}